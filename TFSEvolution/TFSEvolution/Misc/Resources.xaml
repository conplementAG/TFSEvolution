    <!--Templates for builds-->
    <DataTemplate x:Key="TemplateEventBuildSuccess">
        <Grid Width="480" Margin="10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Width="60" Height="60">
                <Image Width="60" Height="60" Source="ms-appx:///Images/BuildSuccess.png"/>
            </Border>
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock x:Name="CreationDate" Text="{Binding CreationDate}" Style="{StaticResource TitleTextBlockStyle}" FontFamily="{StaticResource TechnicalFont}" Margin="0,0,20,0" FontWeight="Bold" Foreground="{StaticResource GreenBrush}"/>
                    <TextBlock x:Name="Creator" Text="{Binding Creator}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="NoWrap" FontFamily="{StaticResource TechnicalFont}" FontSize="14.667" FontWeight="Bold" Foreground="{StaticResource GreenBrush}"/>
                </StackPanel>
                <TextBlock x:Name="EventTitle" Text="{Binding EventTitle}" Style="{StaticResource TitleTextBlockStyle}" FontFamily="{StaticResource TechnicalFont}" Margin="0,0,40,0"/>
            </StackPanel>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="TemplateEventBuildDefault">
        <Grid Width="480" Margin="10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Width="60" Height="60">
                <Image Width="60" Height="60" Source="ms-appx:///Images/BuildDefault.png"/>
            </Border>
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock x:Name="CreationDate" Text="{Binding CreationDate}" Style="{StaticResource TitleTextBlockStyle}" FontFamily="{StaticResource TechnicalFont}" Margin="0,0,20,0" FontWeight="Bold" Foreground="{StaticResource PBIBrush}"/>
                    <TextBlock x:Name="Creator" Text="{Binding Creator}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="NoWrap" FontFamily="{StaticResource TechnicalFont}" FontSize="14.667" FontWeight="Bold" Foreground="{StaticResource PBIBrush}"/>
                </StackPanel>
                <TextBlock x:Name="EventTitle" Text="{Binding EventTitle}" Style="{StaticResource TitleTextBlockStyle}" FontFamily="{StaticResource TechnicalFont}" Margin="0,0,40,0"/>
            </StackPanel>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="TemplateEventBuildPartially">
