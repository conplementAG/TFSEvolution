    <!--Template for checkins-->
    <DataTemplate x:Key="TemplateEventCheckin">
        <Grid Width="480" Margin="10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border>
                <Image Width="60" Height="60" Source="ms-appx:///Images/CheckInIcon.png"/>
