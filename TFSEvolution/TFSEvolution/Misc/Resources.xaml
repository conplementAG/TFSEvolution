            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock x:Name="CreationDate" Text="{Binding CheckinDate}" Style="{StaticResource TitleTextBlockStyle}" FontFamily="{StaticResource TechnicalFont}" Margin="0,0,20,0" FontWeight="Bold" Foreground="{StaticResource PBIBrush}"/>
                    <TextBlock x:Name="Creator" Text="{Binding CheckedInBy}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="NoWrap" FontFamily="{StaticResource TechnicalFont}" FontSize="14.667" FontWeight="Bold" Foreground="{StaticResource PBIBrush}"/>
                </StackPanel>
                <TextBlock x:Name="EventTitle" Text="{Binding EventTitle}" Style="{StaticResource TitleTextBlockStyle}" FontFamily="{StaticResource TechnicalFont}" Margin="0,0,40,0"/>
            </StackPanel>
