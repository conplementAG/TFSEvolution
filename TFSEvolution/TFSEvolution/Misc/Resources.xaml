                <Image Width="60" Height="60" Source="ms-appx:///Images/BuildFailed.png"/>
            </Border>
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock x:Name="CreationDate" Text="{Binding CreationDate}" Style="{StaticResource TitleTextBlockStyle}" FontFamily="{StaticResource TechnicalFont}" Margin="0,0,20,0" FontWeight="Bold" Foreground="#FFBA0000"/>
                    <TextBlock x:Name="Creator" Text="{Binding Creator}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="NoWrap" FontFamily="{StaticResource TechnicalFont}" FontSize="14.667" FontWeight="Bold" Foreground="#FFBA0000"/>
